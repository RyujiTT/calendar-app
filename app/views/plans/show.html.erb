<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12">
      <h4 class="mt-3">予定詳細</h4>
      <table class="table">
        <thead>
          <th>タイトル</th>
          <th>内容</th>
          <th>時間</th>
          <th></th>
        </thead>
        <tbody>
          <td><%= @plan.title %></td>
          <td><%= @plan.content %></td>
          <td><%= @plan.start_time.strftime("%m-%d %H:%M") %></td>
          <td>
            <%= link_to '編集', edit_plan_path(@plan), class: "btn btn-sm btn-success" %>
            <%= link_to '消去', @plan, method: :delete, data: { confirm: '本当に?' }, class: "btn btn-sm btn-danger" %>
            <%= link_to '戻る', plans_path, class: "btn btn-sm btn-primary" %>
          </td>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-12">
      <%= month_calendar events: @plans do |date, plans| %>
        <%= date.day %>
        <% plans.each do |plan| %>
          <div>
            <%= link_to plan.title, plan %>
            <%= plan.start_time.strftime("%H:%M") %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


